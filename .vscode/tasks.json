{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "执行当前c编译后的exe",
            "command": "D:\\Cprogram_vsCode\\${fileBasenameNoExtension}.exe",
            "dependsOn":"C/C++: gcc.exe 生成活动文件",
        },
        {
            "type": "shell",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "D:\\MInGw\\x86_64-8.1.0-release-posix-seh-rt_v6-rev0\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
                // "&& ${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {  // 这里设为默认任务
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: D:\\MInGw\\x86_64-8.1.0-release-posix-seh-rt_v6-rev0\\mingw64\\bin\\gcc.exe"
        },
        {
            "type": "shell",
            "label": "C/C++: clang.exe 生成活动文件",
            "command": "D:\\clang+llvm-18.1.8\\clang+llvm-18.1.8-x86_64-pc-windows-msvc\\bin\\clang.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",  // 去掉默认，避免冲突
            "detail": "调试器生成的任务。"
        }
    ]
}